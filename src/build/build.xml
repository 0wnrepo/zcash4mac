<project name="ZCashSwingWalletUI" basedir="../.." default="buildit">
	
    <property name="src.dir"     value="src"/>
    <property name="build.dir"   value="build"/>
    <property name="classes.dir" value="${build.dir}/classes"/>
    <property name="jar.dir"     value="${build.dir}/jars"/>
	
	<!-- props for the app bundler -->
	<property name="appbundler.jar" value="antlib/appbundler-1.0.jar" />
	<property name="osx.app.dir" value="${build.dir}/osxapp" />

    <property name="main-class"  value="com.vaklinov.zcashui.ZCashUI"/>

	<path id="main-classpath">
		<fileset dir="lib">
			<include name="**/*.jar" />
		</fileset>
	</path>
	
    <target name="clean">
        <delete dir="${build.dir}"/>
    </target>
	
    <target name="copyResources">
    	<copy todir="${classes.dir}" >  
    	    <fileset dir="${src.dir}/resources">  
    	        <include name="images/**"/>
    	    	    <include name="sprout-verifying.key"/>
    	    </fileset>
    	</copy>
    </target>

    <target name="compile">
        <mkdir dir="${classes.dir}"/>
        <javac srcdir="${src.dir}" destdir="${classes.dir}" debug="on">
        	<classpath refid="main-classpath"/>
        </javac>
    </target>

    <target name="jar" depends="compile,copyResources">
        <mkdir dir="${jar.dir}"/>
        <jar destfile="${jar.dir}/${ant.project.name}.jar" 
        	 basedir="${classes.dir}"
        	 excludes="**/tradetest/*.class">
            <manifest>
                <attribute name="Main-Class" value="${main-class}"/>
            </manifest>
        </jar>
        <jar destfile="${jar.dir}/${ant.project.name}-src.jar" 
        	 basedir="${src.dir}">
        </jar>
    </target>
	
	<target name="copyothers">
		
	</target>

    <target name="buildit" depends="clean,jar,copyothers">
    	<!-- Final cleanup -->
    	<delete dir="${classes.dir}"/>
	</target>

	<!-- ############################ -->
	<!-- everything below this is for the mac bundler -->
	<!-- ############################ -->
	
	<!-- get a handle on the environment -->
	<property environment="env" />
	
	<!-- fail if JAVA_HOME is not set -->
	<target name="checkJavaHome">
		<fail message="JAVA_HOME has to be set!">
			<condition>
				<or>
					<equals arg1="${env.JAVA_HOME}" arg2="" />
					<not>
						<isset property="env.JAVA_HOME" />
					</not>
				</or>
			</condition>
		</fail>
	</target>
	
	<!-- fail if not on OSX -->
	<target name="checkOSX">
		 <fail message="This target can only run on OSX">
		    <condition>
		    	  <not>
		        <os family="mac"/>
		    	  </not>
		    	</condition>
		 </fail>
	</target>
	
	<!-- define the app bundler task -->
	<taskdef name="bundleapp"
	             classname="com.oracle.appbundler.AppBundlerTask"   
	             classpath="${appbundler.jar}" />
	
	<!-- and the bundle target -->
	<target name="osxbundle" depends="checkJavaHome,checkOSX,buildit">
		<mkdir dir="${osx.app.dir}" />
		<bundleapp 
		  outputdirectory="${osx.app.dir}"
		  name="${ant.project.name}" 
		  displayname="${ant.project.name}"
		  identifier="zcash.wallet.ui"
		  mainclassname="${main-class}" >
			<runtime dir="${env.JAVA_HOME}"/>
			<classpath file="lib/commons-commons-codec-1.9.jar" />
			<classpath file="lib/commons-logging-1.2.jar" />
			<classpath file="lib/httpclient-4.5.2.jar" />
			<classpath file="lib/httpcore-4.4.4.jar" />
			<classpath file="${jar.dir}/${ant.project.name}.jar" />
			<option value="-Dzcash.location.dir=$APP_ROOT/Contents/MacOS" />
			<option value="-Dlaunching.from.appbundle=true" />
			<option value="-Djava.util.logging.config.file=$APP_ROOT/Contents/MacOS/logging.properties" />
			<option value="-Dwallet.name=@name@" />
			<option value="-Dwallet.version=@version@" />
	     </bundleapp>
	</target>
		
	
</project>

